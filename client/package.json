{
  "scripts": {
    "build": "NODE_ENV=production webpack --config=./webpack.config.js",
    "test": "mocha --compilers js:babel-core/register -c --require ./test/setup.js --recursive",
    "test:cov": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- --compilers js:babel-core/register -c --require ./test/setup.js --recursive",
    "test:integration": "npm run test -- test/integration",
    "test:unit": "npm run test -- test/unit",
    "test:watch": "npm run test:unit -- --watch --growl",
    "start:production": "node build/bundle.js",
    "start:dev": "node dev-server.js",
    "start": "concurrent 'npm run start:dev' 'npm run test:watch' 'npm run lint:watch'",
    "lint:watch": "npm run lint -- -w --fix",
    "lint": "esw src",
    "pre-commit": "npm run lint && npm run test"
  },
  "dependencies": {
    "autoprefixer": "^6.1.0",
    "babel": "^5.8.21",
    "babel-core": "^5.8.22",
    "babel-eslint": "^3.1.15",
    "babel-loader": "^5.3.3",
    "babel-plugin-react-transform": "^1.1.1",
    "chai": "^3.4.0",
    "concurrently": "^0.1.1",
    "css-loader": "^0.21.0",
    "csswring": "^4.0.0",
    "eslint": "^1.3.1",
    "eslint-config-airbnb": "^0.1.0",
    "eslint-plugin-react": "^2.3.0",
    "eslint-watch": "^2.1.3",
    "file-loader": "^0.8.4",
    "growl": "^1.8.1",
    "isparta": "^3.5.3",
    "jsdom": "^7.0.2",
    "lil-http": "^0.1.16",
    "mocha": "^2.3.3",
    "postcss": "^5.0.10",
    "postcss-loader": "^0.7.0",
    "precss": "^1.3.0",
    "raw-loader": "^0.5.1",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-transform-catch-errors": "^1.0.0",
    "react-transform-hmr": "^1.0.0",
    "redbox-react": "^1.0.1",
    "sinon": "^1.17.2",
    "socket.io-client": "^1.3.7",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb"
  },
  "babel": {
    "stage": 0,
    "env": {
      "development": {
        "plugins": [
          "react-transform"
        ],
        "extra": {
          "react-transform": {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "devDependencies": {
    "express": "^4.13.3",
    "glob": "^5.0.15",
    "istanbul": "^0.4.0"
  }
}
